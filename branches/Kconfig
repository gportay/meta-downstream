choice
	prompt "Release branch"
	default BRANCH_MASTER

config BRANCH_KIRKSTONE
        bool "Kirkstone (4.0, LTS)"

config BRANCH_SCARTHGAP
        bool "Scarthgap (5.0, LTS)"

config BRANCH_STYHEAD
        bool "Styhead (5.1)"

config BRANCH_MASTER
        bool "master"

endchoice

config KAS_INCLUDE_BRANCH
        string
        default "branches/kirkstone.yaml" if BRANCH_KIRKSTONE
        default "branches/scarthgap.yaml" if BRANCH_SCARTHGAP
        default "branches/styhead.yaml" if BRANCH_STYHEAD
        default "branches/master.yaml"

