choice
        prompt "Init system"
        default INIT_SYSTEMD

config INIT_MDEV_BUSYBOX
        bool "mdev-busybox"

config INIT_SYSVINIT
        bool "sysvinit"

config INIT_SYSTEMD
        bool "systemd"

config INIT_NONE
        bool "none"

endchoice

config KAS_INCLUDE_INIT
        string
        default "init-system/mdev-busybox.yaml" if INIT_MDEV_BUSYBOX
        default "init-system/systemd.yaml" if INIT_SYSTEMD
        default "init-system/sysvinit.yaml" if INIT_SYSVINIT
        default "init-system/none"
